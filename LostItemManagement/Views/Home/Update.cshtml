@model List<LostItemManagement.Models.Lost>

@{
    ViewData["Title"] = "Update Lost Items";
}
<script src="~/ts/update.js"></script>
<div class="container mt-4">
    <h2>更新するデータ</h2>
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>紛失ID</th>
                <th>なくした日付</th>
                <th>見つけた日付</th>
                <th>なくしたもの</th>
                <th>なくした場所</th>
                <th>なくした詳細な場所</th>
                <th><input type="hidden" value="紛失ID2" /></th>
                <th><input type="hidden" value="紛失フラグ" /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                int index = @Model.IndexOf(item); // インデックスを計算
                <tr>
                    <td>@(index + 1)</td>
                    <td>@(item.lostDate?.ToString("yyyy/MM/dd") ?? "")</td>
                    <td>@(item.foundDate?.ToString("yyyy/MM/dd") ?? "")</td>
                    <td>
                        <input type="text" value="@item.lostItem" class="form-control" />
                    </td>
                    <td>
                        <input type="text" value="@item.lostPlace" class="form-control" />
                    </td>
                    <td>
                        <input type="text" value="@item.lostDetailedPlace" class="form-control" />
                    </td>
                    <td><input type="hidden" value="@item.lostId" /></td>
                    <td><input type="hidden" value="@item.lostFlag" /></td>
                </tr>
            }
        </tbody>
    </table>
    <button id="submit" class="btn btn-primary">更新</button>
</div>